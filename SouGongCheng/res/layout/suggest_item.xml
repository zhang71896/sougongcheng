<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"  
    >
		<TextView
		    android:id="@+id/news_title"
		    android:layout_marginTop="@dimen/margin_top"
		    android:textSize="@dimen/text_lg_size"
		    android:layout_marginLeft="@dimen/margin_sm_left"
		    android:layout_marginRight="@dimen/margin_right"
		    android:textColor="@color/my_red"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="中共甘孜州委办公大楼'11.22'地震灾后加固维修项目"
		    />
  		<TextView
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:id="@+id/news_author"
  		    android:maxLength="20"
  		    android:maxWidth="160dp"
  		    android:textColor="@color/background_material_dark"
  		    android:text="四川日报招标比选网"
  		    android:layout_below="@+id/news_title"
  		    android:layout_marginLeft="@dimen/margin_sm_left"
  		    android:layout_marginTop="@dimen/margin_top"
  		    />
  		<TextView
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:id="@+id/news_type"
  		    android:textColor="@color/background_material_dark"
  		    android:text="代理比选"
  		    android:layout_toRightOf="@+id/news_author"
  		    android:layout_below="@+id/news_title"
  		    android:layout_marginLeft="@dimen/margin_sm_left"
  		    android:layout_marginTop="@dimen/margin_top"
  		    />
  		<TextView
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:id="@+id/start_time"
  		    android:text="2015-07-03"
  		    android:textColor="@color/my_gray"
  		    android:layout_below="@+id/news_author"
  		    android:layout_marginLeft="@dimen/margin_sm_left"
  		    android:layout_marginTop="@dimen/margin_top"
  		    />
  		<TextView
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:id="@+id/end_time"
  		    android:text=""
  		    android:textColor="@color/my_gray"
  		    android:layout_below="@+id/news_author"
  		    android:layout_alignLeft="@+id/news_type"
  		    android:layout_marginTop="@dimen/margin_top"
  		    />
  		<ImageView
  		    android:id="@+id/heart"
  		    android:layout_width="32dp"
  		    android:layout_height="32dp"
  		    android:background="@drawable/heart_gray"
  		    android:layout_marginRight="@dimen/margin_lg_right"
  		    android:layout_alignBottom="@+id/start_time"
  		    android:layout_alignParentRight="true"
  		    
  		    />
		<LinearLayout
		    android:id="@+id/label_line"
		    android:layout_below="@+id/end_time"
		    android:layout_marginTop="@dimen/margin_top"
		    android:layout_marginLeft="@dimen/margin_sm_left"
		    android:layout_marginRight="@dimen/margin_right"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    <TextView
		        android:id="@+id/label"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:layout_weight="1"
		        android:text="工程建设-419.20万-合格法-HG20150703017-甘孜-康定"
		        />
		 </LinearLayout>
</RelativeLayout>